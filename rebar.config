%%-*- mode:erlang -*-

% nosh

{lib_dirs, ["deps"]}.

{erl_opts, [ {i, "deps"} ]}.

{edoc_opts, [
    {preprocess, true},
    {includes, ["deps", "dev"]},
    {doclet, multi_doclet},
    {skip_libs, ["deps", "dev"]},
    {doclet_list, [edown_doclet, edoc_doclet]},
    {top_level_readme,
        {"./README.md", "http://github.com/beadsland/nosh"}},
    {todo, true}
    ]}.

{deps, [
        {noterm, ".*",
            {git, "git://github.com/beadsland/noterm", {branch, master}}},
        {pose, ".*",
            {git, "git://github.com/beadsland/pose", {branch, master}}},
        {nosh_bin, ".*",
            {git, "git://github.com/beadsland/nosh_bin", {branch, master}}},
        {nosh_erl, ".*",
            {git, "git://github.com/beadsland/nosh_erl", {branch, master}}},
        {2do_go4, ".*",
            {git, "git://github.com/beadsland/2do_go4", {branch, master}}},
        {edown, ".*",
            {git, "git://github.com/beadsland/edown", {branch, master}}},
        {edoc, ".*",
            {git, "git://github.com/beadsland/edoc", {branch, master}}},
        {multidoc, ".*",
            {git, "git://github.com/beadsland/multidoc", {branch, master}}},
        {superl, ".*",
            {git, "git://github.com/beadsland/superl", {branch, master}}}
]}.
